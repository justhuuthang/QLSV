@model test3.Models.Notification

@{
    ViewBag.Title = "Suathongtin";
}
<form action="/Home/Suathongtin" method="post" class="form-horizontal">
    @Html.HiddenFor(model => model.NotificationID)
    <div class="form-group">
        <label for="NotificationID" class="col-md-2 control-label">ID:</label>
        <div class="col-md-3">
            <input type="text" name="NotificationID" id="NotificationID" class="form-control" value="@Model.NotificationID" readonly>
        </div>
    </div>

    <div class="form-group">
        <label for="NotificationName" class="col-md-2 control-label">Tiêu đề:</label>
        <div class="col-md-3">
            <input type="text" name="NotificationName" id="NotificationName" class="form-control" value="@Model.NotificationName" required">
        </div>
    </div>

    <div class="form-group">
        <label for="Date" class="col-md-2 control-label">Ngày:</label>
        <div class="col-md-3">
            <input type="date" name="Date" id="Date" class="form-control" value="@String.Format("{0:yyyy-MM-dd}", Model.Date)" required>
        </div>
    </div>

    <div class="form-group">
        <label for="content" class="col-md-2 control-label">Nội dung:</label>
        <div class="col-md-3">
            <textarea name="NotificationContent" id="NotificationContent" class="form-control" rows="4" cols="20" value="@Model.NotificationContent" required></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-3">

            <input type="submit" name="action" value="Sửa" class="btn btn-primary btn-primary-margin">
            <input type="submit" name="action" value="Xóa" class="btn btn-primary">
        </div>
    </div>

    <div>
        @Html.ActionLink("Back to List", "DashBoard")
    </div>
</form>
